<Window x:Class="PremierZal.App.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Height="70" Width="300" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None" BorderThickness="1">
    <Grid>
        <ProgressBar HorizontalAlignment="Stretch" Height="20" Margin="10, 0, 10, 10" VerticalAlignment="Bottom" IsIndeterminate="True"/>
        <Label x:Name="LblTitle" Content="Загрузка списка сеансов..." HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
